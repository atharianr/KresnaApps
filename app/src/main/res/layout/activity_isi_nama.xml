<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IsiNamaActivity">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="32.26dp"
        android:layout_margin="24dp"
        android:src="@drawable/kresna_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:text="Isi nama kamu: "
        android:textAlignment="center"
        android:textColor="@color/kresna_cream"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_nama"/>


        <EditText
            android:id="@+id/et_nama"
            android:layout_width="216dp"
            android:layout_height="64dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textColor="@color/kresna_cream"
            android:textColorHint="@color/kresna_cream_darker"
            android:backgroundTint="@color/kresna_cream"
            android:hint="nama"
            android:layout_margin="4dp"/>


    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="36dp"
        android:background="@drawable/rounded_button_kresna_cream"
        android:textAllCaps="false"
        android:text="Mulai"
        android:layout_below="@id/et_nama"/>

</RelativeLayout>