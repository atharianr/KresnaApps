<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.SelectDifficultyActivity">

    <ImageView
        android:id="@+id/iv_kresna_logo"
        android:layout_width="96dp"
        android:layout_height="32.26dp"
        android:layout_margin="24dp"
        android:src="@drawable/kresna_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pilih_tingkat_kesulitan"
            android:textAlignment="center"
            android:textColor="@color/kresna_cream" />

        <GridLayout
            android:id="@+id/gl_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_easy"
                android:layout_width="256dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_button_selector"
                android:text="@string/easy"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_medium"
                android:layout_width="256dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_button_selector"
                android:enabled="false"
                android:text="@string/medium"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_hard"
                android:layout_width="256dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_button_selector"
                android:enabled="false"
                android:text="@string/hard"
                android:textColor="@color/black" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>