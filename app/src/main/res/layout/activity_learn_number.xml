<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="KRESNA"
        android:textColor="@color/kresna_cream"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textAlignment="center"
        android:layout_below="@+id/tv_logo"
        app:cardBackgroundColor="@color/kresna_cream"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/tv_soal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text="10"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="48dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <GridLayout
        android:id="@+id/gl_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_lanjut"
        android:layout_below="@+id/cv_soal"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/btn_option1_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/btn_option1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/kresna_cream"
                android:scaleType="centerInside"
                android:text="option1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/btn_option2_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/btn_option2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/kresna_cream"
                android:scaleType="centerInside"
                android:text="option1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/btn_option3_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/btn_option3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/kresna_cream"
                android:scaleType="centerInside"
                android:text="option1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:id="@+id/btn_option4_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark" />

            <ImageButton
                android:id="@+id/btn_option4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/kresna_cream"
                android:scaleType="centerInside"
                android:text="option1" />
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:text="Lanjut"
        android:visibility="invisible" />
</RelativeLayout>