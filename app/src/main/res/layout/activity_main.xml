<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.MainActivity">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="174dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/wayang" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_logo"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_learn_number"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/number_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/learn_number"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />

            </GridLayout>

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_learn_addition"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/learn_addition"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />
            </GridLayout>

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_learn_substraction"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/subs_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/learn_substraction"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />
            </GridLayout>

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_learn_multiply"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/multi_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/learn_multiplication"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />
            </GridLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_social"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/social_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/social_experiment"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />
            </GridLayout>

            <GridLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_quiz"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="4"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_button_kresna_cream"
                    android:scaleType="centerInside"
                    android:src="@drawable/quiz_icon" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="@string/quiz"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/kresna_cream" />

            </GridLayout>
        </GridLayout>
    </GridLayout>

    <ImageButton
        android:id="@+id/btn_logo"
        android:layout_width="96dp"
        android:layout_height="32.26dp"
        android:layout_margin="24dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/kresna_logo" />
</RelativeLayout>